CREATE INDEX idx_order_items_variant_type ON order_items(product_variant_id, order_type);


CREATE INDEX idx_create_order_order_items_variant_type_order
ON order_items (product_variant_id, order_type, order_id);


CREATE INDEX idx_check_available_product ON products(active,deleted_at)


CREATE INDEX idx_filter_variants_price
ON product_variants (product_id, price, id);


CREATE INDEX idx_filter_order_status
ON orders (status);

CREATE INDEX idx_retrieve_status_payment
ON orders (status,payment_method);

